// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "temp",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "sunshinecloud007/base-bookworm:lite",
	"build": {
		"dockerfile": "Dockerfile",
		// Use 'context' to specify the build context. More info: https://aka.ms/devcontainers-dockerfile#context
		"context": ".",
		// Use 'args' to pass build arguments. More info: https://aka.ms/devcontainers-dockerfile#args
		"args": {
			// "VARIANT": "8"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installGradle": true,
			"installMaven": true,
			"installAnt": true,
			"installGroovy": true,
			"version": "8",
			"jdkDistro": "tem",
			"gradleVersion": "latest",
			"mavenVersion": "3.9.10",
			"antVersion": "latest",
			"groovyVersion": "latest"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"installYarnUsingApt": true,
			"version": "lts",
			"pnpmVersion": "latest",
			"nvmVersion": "latest"
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/SunshineCloud/temp-Git,type=bind,consistency=cached",
	"workspaceFolder": "/SunshineCloud/temp-Git",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "sudo service supervisor start && sudo service dbus start && bash",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "matrix0523"
}
